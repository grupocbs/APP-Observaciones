<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".Login"
    android:background="#FFFFFF"
    >

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/img_logo"
        android:src="@drawable/logo"
        android:layout_above="@+id/txt_usuario"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/txt_usuario"
        android:hint="Usuario"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="50dp"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        style="@style/EditTextStyle"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:ems="10"
        android:id="@+id/txt_contraseña"
        android:layout_below="@+id/txt_usuario"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="10dp"
        android:hint="Contraseña"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        style="@style/EditTextStyle"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:id="@+id/txt_ip"
        android:layout_below="@+id/txt_contraseña"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="10dp"
        android:hint="Ip servidor"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        style="@style/EditTextStyle"/>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:id="@+id/txt_puerto"
        android:layout_below="@+id/txt_ip"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="10dp"
        android:hint="Puerto"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:inputType="number"
        style="@style/EditTextStyle"/>

    <Button

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ingresar"
        android:id="@+id/txt_ingresar"
        android:layout_below="@+id/txt_puerto"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:onClick="Ingresar"
        style="@style/button_text"
        android:background="@drawable/red_button"/>

    <View style="@style/Separator"
        android:layout_marginTop="20dp"
        android:id="@+id/separator1"
        android:layout_below="@+id/txt_ingresar"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:id="@+id/txt_version"
        android:layout_below="@+id/separator1"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="10dp"
        android:hint=""
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"

        />

</RelativeLayout>
